import java.util.Scanner;

public class QuartsToGallonsInteractive{


    public static void main(String[] args){
        int QUARTS_IN_GALLONS = 4;
        int quartsNeeded;

        Scanner input = new Scanner(System.in);
        System.out.println("How many quarts would you like to convert?");
        quartsNeeded = input.nextInt();
        int quotient = quartsNeeded / QUARTS_IN_GALLONS;
         int remainder = quartsNeeded % QUARTS_IN_GALLONS;
        System.out.println("There is " + (quotient) + " gallons and " + (remainder) + " quarts");
    }
};


